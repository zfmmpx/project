import java.util.Scanner;
public class HelloWorld {
	public static void main(String[] arg) {
		System.out.println("天朝有一个乞丐姓洪,去天桥要钱");
		int money = 1;
		int total = 0;
		for (int i = 0; i < 10; i++) {
			System.out.println("第一天要了" + money + "块钱");
			total += money;
			money *= 2;
		}
		System.out.println("洪乞丐干了10天,收入是" + total + "块钱");
	}
}
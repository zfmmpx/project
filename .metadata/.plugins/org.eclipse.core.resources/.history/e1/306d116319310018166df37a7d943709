public class HelloWorld2 {
	public static void main (String[] args) {
		double goldPoint = 0.618;
		double cache = 30;
		double result;
		double I = 0;
		double J = 0;
		for (int i = 1; i < 21; i++) {
			for(int j = 1; j < 21; j++) {
				if (0 == i % 2 && 0 == j % 2) {
					break;
				}
				result = Math.abs(i / j - goldPoint);
				if (result < cache ) {
					cache = result;
					I = i;
					J = j;
				}
			}
		}
		System.out.println("20以内两个数相除,最接近黄金分割点的是: " + I + "/" + J + ",值为:" + (cache + goldPoint));
	}
}